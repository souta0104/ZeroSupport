<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Activity.HelpActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:text="持ち物の登録方法"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="10dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_margin="10dp"
            android:text="メイン画面左上のハンバーガーアイコンを押してメニューを開き、『一覧』をタップします\n↓\n『一覧』画面の右下のプラス(＋)アイコンをタップします\n↓\n日付をタップして、カレンダーから持ち物を登録したい日付を選びます\n↓\n『持ち物』の欄に登録したい持ち物を入力します\n↓\n『追加』ボタンを押すと登録完了です"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>